{
  "compilerOptions": {
    "composite": true,
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "incremental": true,
    "types": ["vite/client", "vitest/globals"],
    "paths": {
        "@/*": ["./src/*"]
    }
  },
  "include": ["vite.config.ts"]
}
